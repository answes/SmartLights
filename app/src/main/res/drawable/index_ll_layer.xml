<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <!-- 466px  -->
    <item android:width="178dp" android:height="178dp" android:gravity="center">
        <shape>
            <solid android:color="#4f505a" />
            <corners android:radius="178dp"/>
            <size android:width="178dp" android:height="178dp"/>
        </shape>
    </item>
    <!-- dp = px / (ppi / 160) -->
    <!-- 主体背景颜色值 -->
    <item android:width="190dp" android:height="190dp" android:gravity="center">
        <shape
            android:innerRadiusRatio="4"
            android:shape="ring"
            android:thicknessRatio="13"
            android:useLevel="false">
            <gradient
                android:endColor="#0000ff"
                android:startColor="#fff"
                android:type="sweep"/>
        </shape>
    </item>
    <!-- 436px  -->
    <item android:width="166dp" android:height="166dp" android:gravity="center">
        <shape>
            <solid android:color="@color/fragment_index_bg" />
            <corners android:radius="166dp"/>
            <size android:width="166dp" android:height="166dp"/>
        </shape>
    </item>


</layer-list>