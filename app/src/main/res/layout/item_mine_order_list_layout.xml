<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="15px"
             >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="120px">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:textColor="#3d444a"
            android:textSize="40px"
            android:paddingLeft="38px"
            android:gravity="center_vertical"
            android:text="订单编号：01923847083"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:textSize="40px"
            android:textColor="#3d444a"
            android:gravity="center_vertical"
            android:paddingRight="38px"
            android:text="待收货"
            android:layout_height="match_parent" />
    </LinearLayout>

   <com.bigshark.smartlight.weight.OrderGoodListView
       android:id="@+id/og_list"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:background="@color/white"
       android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
       android:gravity="center_vertical|right"
        android:text="共0件商品， 合计：¥ 00.00"
        android:background="@color/white"
        android:layout_marginRight="30px"
        android:textColor="@color/text_fist"
        android:layout_height="120px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d7d7d7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="146px"
        >
        <Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/bt_logistics"
            android:layout_width="202px"
            android:layout_height="86px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30px"
            android:layout_marginRight="15px"
            android:layout_marginTop="30px"
            android:background="@drawable/fragment_order_bt_bg"
            android:text="查看物流"
            android:textColor="@color/text_fist"
            android:textSize="40px" />

        <Button
            android:id="@+id/bt_receipt"
            android:layout_width="202px"
            android:layout_height="86px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:background="@drawable/fragment_order_bt_bg"
            android:text="收货"
            android:textColor="@color/text_fist"
            android:textSize="40px" />
    </LinearLayout>

</LinearLayout>