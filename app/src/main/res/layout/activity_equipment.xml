<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_equipment"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/root_view_bg"
    android:layout_height="match_parent"
    tools:context="com.bigshark.smartlight.pro.mine.view.EquipmentActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_addEqu"
        android:text="+链接新设备"
        android:textColor="@color/white"
        android:textSize="49px"
        android:layout_marginTop="86px"
        android:layout_width="518px"
        android:layout_height="130px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fragment_index_button_bg"
        android:shadowColor="#EE3C57"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
</LinearLayout>
