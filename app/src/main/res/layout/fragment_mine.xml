<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/iv_hander"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/hander"/>

    <TextView
        android:id="@+id/iv_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="13510344127"/>
    
</LinearLayout>

    <com.allen.library.SuperTextView
        android:id="@+id/stv_myStroke"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    app:sLeftTextString="@string/mine_mystroke"
    app:sRightIconRes="@drawable/right_comein"
    />

    <com.allen.library.SuperTextView
        android:id="@+id/stv_myorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextString="@string/mine_myorder"
        app:sRightIconRes="@drawable/right_comein"
        />
    <com.allen.library.SuperTextView
        android:id="@+id/stv_myEquipment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextString="@string/mine_myequipment"
        app:sRightIconRes="@drawable/right_comein"
        />

    <com.allen.library.SuperTextView
        android:id="@+id/stv_market"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextString="@string/mine_market"
        app:sRightIconRes="@drawable/right_comein"
        />

    <com.allen.library.SuperTextView
        android:id="@+id/stv_set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextString="@string/mine_set"
        app:sRightIconRes="@drawable/right_comein"
        />

</LinearLayout>