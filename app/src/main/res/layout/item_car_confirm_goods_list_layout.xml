<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
    android:background="#f8f8f8"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content">

    <com.bigshark.smartlight.weight.XCRoundRectImageView
        android:id="@+id/iv_img"
        android:layout_width="288px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="14px"
        app:round_radius="4dp"
        android:layout_height="230px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:paddingBottom="12px"
            android:paddingTop="12px"
            android:text="coach羊绒波士顿包"
            android:textColor="@color/text_fist"
            android:textSize="43px" />

        <TextView
            android:id="@+id/stv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:lineSpacingMultiplier="1.5"
            android:text="颜色：黑色\n数量：1件"
            android:textColor="#999999"
            android:textSize="35px" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="10px"
            android:text="价格：￥1057"
            android:layout_marginTop="12px"
            android:textColor="#ee5656"
            android:textSize="40px" />
    </LinearLayout>

</LinearLayout>