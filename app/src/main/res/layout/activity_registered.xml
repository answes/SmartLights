<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.bigshark.smartlight.pro.mine.view.RegisteredActivity">
    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="230px"
        android:layout_gravity="center_horizontal"
        android:layout_height="230px"
        android:src="@mipmap/logo"
        android:layout_marginTop="160px"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginTop="221px"
        android:hint="11位手机号码"
        android:drawablePadding="30px"
        android:padding="20px"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/mine_sign_up_phone"
        android:textSize="35px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_yan"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:hint="短信验证码"
            android:drawablePadding="30px"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:padding="20px"
            android:maxLength="6"
            android:singleLine="true"
            android:drawableLeft="@drawable/mine_sign_up_code_ico"
            android:textSize="35px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            />
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="200px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mine_sign_up_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100px"
            android:layout_height="130px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_psw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130px"
            android:hint="设置6-18位密码"
            android:drawablePadding="30px"
            android:padding="20px"
            android:singleLine="true"
            android:layout_marginLeft="100px"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/mine_sign_up_psd"
            android:textSize="35px"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />
        <CheckBox
            android:checked="false"
            android:id="@+id/cbDisplayPassword"
            android:layout_width="wrap_content"
            android:layout_marginRight="100px"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_password"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>

    <Button
        android:id="@+id/bt_registered"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="49px"
        android:layout_marginTop="250px"
        android:layout_width="518px"
        android:layout_height="130px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fragment_index_button_bg"
        android:shadowColor="#EE3C57"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d7d7d7"
        android:layout_gravity="center_horizontal"
        android:textSize="35px"
        android:text="注册即视为同意用户许可协议"
        android:layout_marginTop="43px"/>
</LinearLayout>
