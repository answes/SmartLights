<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registered_bg"
    tools:context="com.bigshark.smartlight.pro.mine.view.LoginActivity">
    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="230px"
        android:layout_gravity="center_horizontal"
        android:layout_height="230px"
        android:src="@drawable/logo"
        android:layout_marginTop="100px"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginTop="180px"
        android:hint="11位手机号码"
        android:drawablePadding="30px"
        android:padding="20px"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/mine_sign_up_phone"
        android:textSize="35px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_yan"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:hint="手机验证码"
            android:drawablePadding="30px"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:padding="20px"
            android:maxLength="6"
            android:singleLine="true"
            android:drawableLeft="@drawable/mine_sign_up_code_ico"
            android:textSize="35px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            />
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="200px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mine_sign_up_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100px"
            android:layout_height="130px" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="请输入新密码"
        android:drawablePadding="30px"
        android:padding="20px"
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/mine_sign_up_psd"
        android:textSize="35px"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>
    <EditText
        android:id="@+id/et_twopsw"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="再次输入新密码"
        android:drawablePadding="30px"
        android:padding="20px"
        android:singleLine="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/mine_sign_up_psd"
        android:textSize="35px"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"/>

    <Button
        android:id="@+id/bt_confim"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="49px"
        android:layout_marginTop="250px"
        android:layout_width="518px"
        android:layout_height="130px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fragment_index_button_bg"
        android:shadowColor="#EE3C57"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />


</LinearLayout>
