<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_speed"
    android:orientation="vertical"
    android:background="#292B3A"
    tools:context="com.bigshark.smartlight.pro.index.view.SpeedDetailActivity">

    <LinearLayout
        android:id="@+id/curveChart1"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@drawable/mine_speed_chat_bg"
        android:paddingBottom="20px"
        android:orientation="vertical">
        <TextView
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:textSize="45px"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10px"
            android:layout_marginLeft="60px"
            android:padding="15px"
            android:background="@drawable/mine_speed_bg"
            android:layout_marginBottom="40px"
            android:text="速度"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_maxspeed"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="50px"
            android:layout_gravity="center"
            android:layout_marginRight="20px"
            android:text="51.8 km/h\n最高速度"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:id="@+id/tv_avgspeed"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:textSize="50px"
            android:text="51.8 km/h\n平均速度"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
