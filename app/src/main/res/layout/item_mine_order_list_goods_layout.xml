<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="#f3f5f7"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="196px">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_good"
        android:layout_width="230px"
        android:layout_marginLeft="30px"
        android:layout_gravity="center_vertical"
        android:layout_height="173px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.allen.library.SuperTextView
        android:id="@+id/stv_title"
        android:layout_width="match_parent"
        app:sLineShow="none"
        app:sLeftTextString="商品名称：男款钱包"
        app:sLeftTextSize="40px"
        app:sLeftTextColor="#3d444a"
        app:sBackgroundColor="#f3f5f7"
        app:sRightTextSize="40px"
        app:sRightTextColor="#3d444a"
        app:sRightTextString="¥200.00"
        android:layout_height="100px"/>

    <com.allen.library.SuperTextView
        android:id="@+id/stv_number"
        android:layout_width="match_parent"
        app:sLineShow="none"
        app:sLeftTextString="型号规格：棕色001"
        app:sLeftTextSize="40px"
        app:sLeftTextColor="#3d444a"
        app:sBackgroundColor="#f3f5f7"
        app:sRightTextSize="40px"
        app:sRightTextColor="#d7d7d7"
        app:sRightTextString="x1"
        android:layout_height="100px"/>
    </LinearLayout>

</LinearLayout>